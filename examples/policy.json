{
  "$schema": "https://mergermarket.github.io/api-entitlements-schema/schema/policy-v1.json#",
  "apis": {
    "example.com/api1": {
      "quota": {
        "softLimit": 10000,
        "hardLimit": 20000,
        "period": "MONTH"
      },
      "plan": "10-requests-per-second-plan",
      "trial": true,
      "statements": [
        {
          "restrictions": {
            "field1": [ "foo", "bar" ],
            "field2": [ "baz" ]
          },
          "validity": {
            "from": "2021-01-01"
          }
        },
        {
          "restrictions": {
            "field2": [ "baz" ],
            "field3": [ "quux" ]
          },
          "validity": {
            "from": "2020-12-01",
            "daysAfterFirstUse": 30
          }
        }
      ]
    },
    "example.com/api2": {
      "plan": "1000-requests-per-second-plan",
      "responseExclude": [ "contactDetails" ],
      "statements": [
        {
          "restrictions": {}
        }
      ]
    }
  }
}
